{
  "name": "mfml-react-runtime",
  "version": "1.0.0",
  "description": "The ICU MessageFormat + XML/HTML React runtime.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run rollup && npm run terser",
    "rollup": "rollup --external mfml-runtime,react --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "terser": "terser --compress --mangle toplevel --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/mfml.git"
  },
  "keywords": [
    "i18n",
    "html",
    "language",
    "parser",
    "translation",
    "compiler",
    "xml",
    "icu",
    "l10n",
    "intl",
    "tms"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/mfml/issues"
  },
  "homepage": "https://github.com/smikhalevski/mfml#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "mfml-runtime": "^1.0.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.0.0",
    "@types/react": "^17.0.15"
  }
}
