{
  "name": "mfml-compiler",
  "version": "1.0.0",
  "description": "The ICU MessageFormat + XML/HTML compiler.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc && npm run rollup && npm run terser",
    "rollup": "rollup --external @messageformat/parser,@smikhalevski/codegen,tag-soup --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "terser": "terser --compress --mangle toplevel --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/mfml.git"
  },
  "keywords": [
    "i18n",
    "html",
    "language",
    "parser",
    "translation",
    "compiler",
    "xml",
    "icu",
    "l10n",
    "intl",
    "tms"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/mfml/issues"
  },
  "homepage": "https://github.com/smikhalevski/mfml#readme",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/moo": "^0.5.4"
  },
  "dependencies": {
    "@messageformat/parser": "^5.0.0",
    "@smikhalevski/codegen": "^1.0.0",
    "speedy-entities": "^1.1.0",
    "tag-soup": "^1.0.0-next.0"
  }
}
