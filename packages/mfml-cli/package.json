{
  "name": "mfml-cli",
  "version": "1.0.0",
  "description": "The ICU MessageFormat + XML/HTML command-line interface.",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && npm run rollup",
    "rollup": "rollup --external commander,glob,mfml-compiler --input ./lib/mfmlc.js --file ./lib/mfmlc.js --format cjs --plugin @rollup/plugin-node-resolve",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/mfml.git"
  },
  "keywords": [
    "i18n",
    "html",
    "language",
    "parser",
    "translation",
    "compiler",
    "xml",
    "icu",
    "l10n",
    "intl",
    "tms"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/mfml/issues"
  },
  "homepage": "https://github.com/smikhalevski/mfml#readme",
  "jest": {
    "preset": "ts-jest"
  },
  "dependencies": {
    "commander": "^8.1.0",
    "glob": "^7.1.7"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4"
  }
}
